{
  "compileOnSave": false,
  "include": ["src", "types"],
  "compilerOptions": {
    "baseUrl": "./",
    "module": "es2020",
    "resolveJsonModule": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "ES6",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true
  }
}
